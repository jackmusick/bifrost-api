{
    "auth": {
        "rolesSource": "/api/GetRoles",
        "identityProviders": {
            "azureActiveDirectory": {
                "registration": {
                    "openIdIssuer": "https://login.microsoftonline.com/common/v2.0",
                    "clientIdSettingName": "ENTRA_CLIENT_ID",
                    "clientSecretSettingName": "ENTRA_CLIENT_SECRET"
                }
            }
        }
    },
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "*.css",
            "*.scss",
            "*.js",
            "*.json",
            "*.png",
            "*.gif",
            "*.ico",
            "*.jpg",
            "*.svg",
            "*.woff",
            "*.woff2",
            "*.ttf",
            "*.eot"
        ]
    },
    "routes": [
        {
            "route": "/.auth/*",
            "allowedRoles": ["anonymous"]
        },
        {
            "route": "/api/health*",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/discovery",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/data-providers*",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/forms",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/forms",
            "methods": ["POST"],
            "allowedRoles": ["PlatformAdmin"]
        },
        {
            "route": "/api/forms/*/startup",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/forms/*",
            "methods": ["GET", "POST"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/forms/*",
            "methods": ["PUT", "DELETE"],
            "allowedRoles": ["PlatformAdmin"]
        },
        {
            "route": "/api/endpoints/*",
            "allowedRoles": ["anonymous"]
        },
        {
            "route": "/api/workflows/*",
            "allowedRoles": ["anonymous", "authenticated"]
        },
        {
            "route": "/api/executions",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/executions/*",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/*",
            "allowedRoles": ["PlatformAdmin"]
        }
    ],
    "responseOverrides": {
        "401": {
            "redirect": "/.auth/login/aad",
            "statusCode": 302
        }
    }
}
