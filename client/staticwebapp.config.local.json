{
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "*.css",
            "*.scss",
            "*.js",
            "*.json",
            "*.png",
            "*.gif",
            "*.ico",
            "*.jpg",
            "*.svg",
            "*.woff",
            "*.woff2",
            "*.ttf",
            "*.eot"
        ]
    },
    "routes": [
        {
            "route": "/.auth/*",
            "allowedRoles": ["anonymous"]
        },
        {
            "route": "/api/health*",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/discovery",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/data-providers*",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/forms",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/forms",
            "methods": ["POST"],
            "allowedRoles": ["PlatformAdmin"]
        },
        {
            "route": "/api/forms/*",
            "methods": ["GET", "POST"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/forms/*",
            "methods": ["PUT", "DELETE"],
            "allowedRoles": ["PlatformAdmin"]
        },
        {
            "route": "/api/workflows*",
            "methods": ["POST"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/executions",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/executions/*",
            "methods": ["GET"],
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/*",
            "allowedRoles": ["PlatformAdmin"]
        }
    ],
    "responseOverrides": {
        "401": {
            "redirect": "/.auth/login/aad",
            "statusCode": 302
        }
    }
}
