{
    "name": "Bifrost API Development",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        },
        "ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {}
    },
    "postCreateCommand": "mkdir -p /home/vscode/workspace /home/vscode/tmp && pip install -r requirements.txt && npm install -g azure-functions-core-tools@4 azurite --unsafe-perm true",
    "runArgs": [
        "--network=host"
    ],
    "forwardPorts": [
        7071,
        10000,
        10001,
        10002
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-azurefunctions",
                "charliermarsh.ruff",
                "Azurite.azurite",
                "Anthropic.claude-code",
                "naumovs.color-highlight",
                "SanjulaGanepola.github-local-actions"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.formatting.provider": "none",
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.formatOnSave": true
                },
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },
    "remoteUser": "vscode",
    "mounts": [
        "source=${localEnv:HOME}${localEnv:UserProfile},target=/home/vscode,type=bind"
    ]
}