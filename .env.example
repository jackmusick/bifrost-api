# Bifrost API Environment Configuration (New Docker Stack)
# Copy this file to .env and customize as needed
#
# This is for the new PostgreSQL/RabbitMQ/Redis stack.
# For the legacy Azure Functions stack, see .env.example

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_PASSWORD=bifrost_dev
DATABASE_URL=postgresql+asyncpg://bifrost:bifrost_dev@localhost:5432/bifrost
DATABASE_URL_SYNC=postgresql://bifrost:bifrost_dev@localhost:5432/bifrost

# =============================================================================
# Message Queue (RabbitMQ)
# =============================================================================
RABBITMQ_PASSWORD=bifrost_dev
RABBITMQ_URL=amqp://bifrost:bifrost_dev@localhost:5672/

# =============================================================================
# Cache & Sessions (Redis)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security
# =============================================================================
# IMPORTANT: Change this in production! Must be at least 32 characters.
SECRET_KEY=dev-secret-key-change-in-production-must-be-32-chars

# JWT token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# File Storage
# =============================================================================
WORKSPACE_PATH=/workspace
TEMP_PATH=/tmp/bifrost

# =============================================================================
# Development User
# =============================================================================
# Default user created on startup in development mode
DEV_USER_EMAIL=admin@localhost
DEV_USER_PASSWORD=admin

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000
